<div style="max-width: 600px;">
  <div class="page-header">
    <h1 class="page-title">Edit <%= @community.name %></h1>
  </div>

  <% if @community.errors.any? %>
    <div class="error-messages">
      <h4><%= pluralize(@community.errors.count, "error") %> prevented this community from being saved:</h4>
      <ul>
        <% @community.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <%= form_with model: @community, url: community_path(@community), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 4 %>
      </div>

      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category, Community::CATEGORIES.map { |c| [c.titleize, c] }, {}, { required: true } %>
      </div>

      <h3 style="margin: 1.5rem 0 1rem; font-size: 1rem;">Consensus Settings</h3>

      <div class="form-group">
        <%= f.label :consensus_threshold, "Consensus Threshold (%)" %>
        <%= f.number_field :consensus_threshold, min: 50, max: 100 %>
        <p class="form-hint">Percentage of Yes votes required for a proposal to pass.</p>
      </div>

      <div class="form-group">
        <%= f.label :quorum_percentage, "Quorum (%)" %>
        <%= f.number_field :quorum_percentage, min: 1, max: 100 %>
        <p class="form-hint">Minimum percentage of members who must vote.</p>
      </div>

      <div class="form-group">
        <%= f.label :voting_period_days, "Voting Period (days)" %>
        <%= f.number_field :voting_period_days, min: 1, max: 90 %>
      </div>

      <div style="display: flex; gap: 0.5rem; margin-top: 1.5rem;">
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <a href="<%= community_path(@community) %>" class="btn btn-secondary">Cancel</a>
      </div>
    <% end %>
  </div>

  <div class="card" style="margin-top: 2rem; border-color: var(--danger);">
    <h3 style="color: var(--danger);">Danger Zone</h3>
    <p style="color: var(--text-muted); margin: 0.5rem 0 1rem;">Deleting the community will remove all proposals, votes, and laws. This cannot be undone.</p>
    <%= button_to "Delete Community", community_path(@community), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure? This will delete all proposals, votes, and laws." } %>
  </div>
</div>

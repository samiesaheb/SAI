<div class="auth-container">
  <div class="auth-card">
    <h1>Sign In</h1>

    <%= form_with url: login_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :login, "Email or Username" %>
        <%= f.text_field :login, autofocus: true, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, required: true %>
      </div>

      <%= f.submit "Sign In", class: "btn btn-primary", style: "width: 100%;" %>
    <% end %>

    <div class="auth-footer">
      Don't have an account? <a href="<%= signup_path %>">Sign up</a>
    </div>
  </div>
</div>
